<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_inherit_sl_ngapi" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.sl.ngapi</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="amount_limit" />
            </field>
            <div name="button_box" position="inside">
                <!-- Invoice stat button -->
                <button name="button_open_sl_total_due" type="object"
                        class="oe_stat_button" icon="fa-bars" >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">
                            <field name="sl_total_due"/>
                        </span>
                    </div>
                </button>
            </div>
        </field>
    </record>

</odoo>
