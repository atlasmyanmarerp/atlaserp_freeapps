<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_tag_view_tree" model="ir.ui.view">
        <field name="name">product_tag.view.tree</field>
        <field name="model">sl.product.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_product_tag_view" model="ir.actions.act_window">
        <field name="name">Product Tags</field>
        <field name="res_model">sl.product.tag</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sl_nga_pi.product_tag_view_tree"/>
        <!-- <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new product tag
            </p>
        </field> -->
    </record>

    <menuitem
        id="product_tag_menu"
        name="Product Tag"
        action="action_product_tag_view"
        parent="stock.menu_stock_config_settings"
        sequence="10"/>

</odoo>
