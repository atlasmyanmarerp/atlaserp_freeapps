<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_template_property_form_inherit_slngapi" model="ir.ui.view">
        <field name="name">product.template.stock.property.form.inherit.slngapi</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <field name="tracking" position="after">
                <field name="upgrade_lots" widget="radio" attrs="{'invisible': [('type', '=', 'service'), ('tracking', '!=', 'lot')]}"/>
            </field>
        </field>
    </record>

    <record id="product_template_form_view_inherit_slngapi" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.slngapi</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="detailed_type" position="after" >
                <field name="sl_service_type" />
            </field>
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="bill_ok"/>
                    <label for="bill_ok"/>
                </span>
            </div>
        </field>
    </record>

</odoo>
