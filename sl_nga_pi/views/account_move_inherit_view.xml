<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_slngapi" model="ir.ui.view">
        <field name="name">account.move.form.inherit.ngapi</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='quantity']" position="after">
                <field name="sl_weight" />
                <field name="est_weight" readonly="1" />
                <field name="sl_sale_line_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']" position="after">
                <field name="parent_state" invisible="1" />
                <field name="sl_product_tag" widget="many2many_tags" attrs="{'readonly': [('parent_state', '!=', 'draft')]}" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//form//field[@name='quantity']" position="after">
                <field name="sl_weight" />
                <field name="est_weight" readonly="1" />
                <field name="sl_sale_line_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="after">
                <field name="est_price_unit" optional="show" readonly="1" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='account_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//form//field[@name='price_unit']" position="after">
                <field name="est_price_unit" optional="show" readonly="1" />
            </xpath>
            <button name="action_post" position="before">
                <button name="action_add_service_product" string="Add Service Product" class="oe_highlight"
                    type="object" data-hotkey="v"
                    attrs="{'invisible': ['|','|', ('move_type', '!=', 'in_invoice'),('sl_po_id', '!=', False),('state', '!=', 'draft')]}"/>
            </button>
            <field name="partner_id" position="after">
                <field name="sl_car_no" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}" />
                <field name="sl_driver_name" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}" />
                <field name="sl_station" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}" />
                <field name="sl_po_id" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}" />
                <field name="sl_partner_id" attrs="{'invisible': [('sl_po_id', '=', False)]}" />
            </field>
            <page id="invoice_tab" position="after">
                <page name="sl_so_total_line" string="Total Sale Line">
                    <field name="sl_inv_line_ids"
                        widget="section_and_note_one2many"
                        mode="tree"
                        readonly="1"
                        attrs="{'invisible': [('move_type', '=', 'entry')]}">
                        <tree string="Total Invoice Lines">
                            <field name="inv_move_id" invisible="1" />
                            <field name="product_id" />
                            <field name="sl_product_tag" widget='many2many_tags' />
                            <field name="display_tag" />
                            <field name="quantity"/>
                            <field name="sl_weight" />
                            <field name="org_price_unit" />
                            <field name="price_unit" invisible="1" />
                            <field name="price_subtotal" />
                        </tree>
                        <form string="Total Invoice Line">
                            <sheet>
                                <group>
                                    <field name="product_id" />
                                    <field name="inv_move_id" invisible="1" />
                                    <field name="quantity"/>
                                    <field name="sl_weight" />
                                    <field name="org_price_unit" />
                                    <field name="price_unit" invisible="1" />
                                    <field name="price_subtotal" />
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
                <page name="sl_inv_line_sec_ids" string="Sec Total Sale Line">
                    <field name="sl_inv_line_sec_ids"
                        widget="section_and_note_one2many"
                        mode="tree"
                        attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}">
                        <tree string="Sec Total Invoice Lines" editable="bottom">
                            <field name="inv_move_id" invisible="1" />
                            <field name="product_id" readonly="1" />
                            <field name="sl_product_tag" widget='many2many_tags' />
                            <field name="display_tag" />
                            <field name="quantity"/>
                            <field name="sl_weight" />
                            <field name="org_price_unit" />
                            <field name="price_unit" invisible="1" />
                            <field name="price_subtotal" />
                        </tree>
                        <form string="Sec Total Invoice Line">
                            <sheet>
                                <group>
                                    <field name="product_id" />
                                    <field name="inv_move_id" invisible="1" />
                                    <field name="quantity"/>
                                    <field name="sl_weight" />
                                    <field name="org_price_unit" />
                                    <field name="price_unit" invisible="1" />
                                    <field name="price_subtotal" />
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </page>
            <field name="tax_totals" position="before">
                <field name="before_total_due" />
            </field>
            <field name="amount_residual" position="before">
                <field name="after_total_due" />
            </field>
        </field>
    </record>

</odoo>
